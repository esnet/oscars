<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/file-appender.xml"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d %clr(%-5p) %clr(%-35logger{5}){cyan} - %-60msg%n
            </Pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>backed.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d %clr(%-5p) %clr(%-35logger{5}){cyan} - %-60msg%n
            </Pattern>
        </encoder>
    </appender>

    <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
        <syslogHost>localhost</syslogHost>
        <facility>USER</facility>
        <port>514</port>
        <throwableExcluded>true</throwableExcluded>
        <suffixPattern>%d %clr(%-5p) %clr(%-35logger{5}){cyan} - %-60msg%n</suffixPattern>
    </appender>

    <!-- magic line: ties to spring logging.file property -->
    <property name="LOG_FILE" value="${LOG_FILE:-${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}/}spring.log}"/>

    <root level="WARN">
        <appender-ref ref="FILE"/>
        <!--<appender-ref ref="SYSLOG" />-->
        <!--<appender-ref ref="STDOUT" />-->
    </root>

    <!--<logger name="net.es.oscars" level="debug"/>-->
    <logger name="org.hibernate.tool.hbm2ddl.SchemaExport" level="off" />
    <logger name="org.apache.cxf.services" level="INFO" />
    <logger name="io.undertow.websockets.jsr" level="ERROR" />

    <logger name="net.es.oscars" level="DEBUG">
        <appender-ref ref="SYSLOG" />
    </logger>

    <logger name="org.springframework" level="ERROR">
        <appender-ref ref="STDOUT" />
    </logger>

</configuration>