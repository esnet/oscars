

server {
    listen 3000;
    location / {
        root /usr/share/nginx/html;
        index index.html index.htm;
        try_files $uri $uri/ /index.html =404;
    }
    location /api {
      proxy_pass $OSCARS_BACKEND_URL/api;
    }
    location /protected {
      proxy_pass $OSCARS_BACKEND_URL/protected;
    }
    location /admin {
      proxy_pass $OSCARS_BACKEND_URL/admin;
    }

}
